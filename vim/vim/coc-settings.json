{
    "javascript": {
        "suggestionActions": {
            "enabled": false
        }
    },
    "languageserver": {
        "bash": {
          "command": "bash-language-server",
          "args": ["start"],
          "filetypes": ["sh"],
          "ignoredRootPaths": ["~"]
        }
    },
    "snippets": {
        "ultisnips": {
            "enable": true,
            "directories": [
                "snippets/custom",
                "snippets/UltiSnips"
            ]
        },
        "snipmate": {
            "enable": false
        },
        "snippets": {
            "author": "lightxue"
        }
    }
}
